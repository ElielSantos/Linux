- $ cd /etc/apt/
- $ sudo nano apt.conf

- $ Acquire::http::proxy "http://USERNAME:PASSWORD@PROXYSERVER:PORT";
- $ Acquire::https::proxy "https://USERNAME:PASSWORD@PROXYSERVER:PORT";
- $ Acquire::ftp::proxy "ftp://USERNAME:PASSWORD@PROXYSERVER:PORT";

